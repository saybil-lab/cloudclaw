APP_NAME=CloudClaw
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=cloudclaw
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@cloudclaw.com"
MAIL_FROM_NAME="${APP_NAME}"

VITE_APP_NAME="${APP_NAME}"

# ==========================================
# HETZNER CLOUD API
# ==========================================
# Get your API token from https://console.hetzner.cloud/
# Projects > Your Project > Security > API Tokens
HETZNER_API_TOKEN=
# Set to false to use real Hetzner API
HETZNER_MOCK=true

# ==========================================
# STRIPE PAYMENTS
# ==========================================
# Get your keys from https://dashboard.stripe.com/apikeys
STRIPE_KEY=pk_test_your_publishable_key
STRIPE_SECRET=sk_test_your_secret_key
# Get webhook secret from https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
# Stripe Price ID for the subscription ($199/month)
# Create a product in Stripe Dashboard > Products, then get the Price ID (price_xxx)
STRIPE_PRICE_ID=price_your_subscription_price_id
# Set to false to use real Stripe API
STRIPE_MOCK=true

# ==========================================
# MAILCOW EMAIL (Optional)
# ==========================================
# Mailcow API for creating email accounts
# Leave empty to skip email account creation
MAILCOW_API_URL=https://mail.cloudclaw.com
MAILCOW_API_KEY=
MAILCOW_DOMAIN=ai.cloudclaw.com
