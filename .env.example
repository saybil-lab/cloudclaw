APP_NAME=CloudClaw
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=cloudclaw
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@cloudclaw.com"
MAIL_FROM_NAME="${APP_NAME}"

VITE_APP_NAME="${APP_NAME}"

# ==========================================
# HETZNER CLOUD API
# ==========================================
# Get your API token from https://console.hetzner.cloud/
# Projects > Your Project > Security > API Tokens
HETZNER_API_TOKEN=wxuDmz9yka2uA6efFYBJt8gVMiSESM4YNUaiNrmiJzSz05Opr1XDpxe1j7qeL6oU
# Set to false to use real Hetzner API
HETZNER_MOCK=true
# Snapshot ID for pre-baked OpenClaw image (run: php artisan snapshot:create-base)
HETZNER_SNAPSHOT_ID=

# ==========================================
# STRIPE PAYMENTS
# ==========================================
# Get your keys from https://dashboard.stripe.com/apikeys
STRIPE_KEY=pk_test_your_publishable_key
STRIPE_SECRET=sk_test_your_secret_key
# Get webhook secret from https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
# Stripe Price ID for the subscription (legacy single plan)
# Create a product in Stripe Dashboard > Products, then get the Price ID (price_xxx)
STRIPE_PRICE_ID=price_your_subscription_price_id
# Tiered subscription price IDs
STRIPE_PRICE_STARTER=price_starter_id
STRIPE_PRICE_PRO=price_pro_id
STRIPE_PRICE_BEAST=price_beast_id
# Set to false to use real Stripe API
STRIPE_MOCK=true

# ==========================================
# MAILCOW EMAIL (Optional)
# ==========================================
# Mailcow API for creating email accounts
# Leave empty to skip email account creation
MAILCOW_API_URL=https://mail.cloudclaw.com
MAILCOW_API_KEY=
MAILCOW_DOMAIN=ai.cloudclaw.com

# ==========================================
# ANALYTICS & TRACKING
# ==========================================
# Google Tag Manager (get from https://tagmanager.google.com/)
GTM_ID=

# Google Analytics 4 (get from https://analytics.google.com/)
# Note: If using GTM, configure GA4 through GTM instead
GA4_ID=

# Microsoft Clarity (get from https://clarity.microsoft.com/)
CLARITY_ID=

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URL=

# ==========================================
# REVENUECAT (iOS Subscriptions)
# ==========================================
REVENUECAT_API_KEY=
REVENUECAT_WEBHOOK_AUTH_KEY=

# ==========================================
# UNIPILE MESSAGING API
# ==========================================
# Get your credentials from https://developer.unipile.com/
UNIPILE_DSN=https://api1.unipile.com
UNIPILE_API_KEY=
# The Unipile account ID for your connected Telegram account
UNIPILE_TELEGRAM_ACCOUNT_ID=

# ==========================================
# DEV: REUSE TELEGRAM BOT (skip BotFather)
# ==========================================
# Set both to skip bot creation and reuse one token for testing
DEV_TELEGRAM_TOKEN=
DEV_TELEGRAM_BOT_USERNAME=

# ==========================================
# DOCKER DEPLOYMENT
# ==========================================
# Docker-based container deployment (faster & cheaper than per-user VMs)
# Run: php artisan docker:setup-host to provision and configure
DOCKER_HOST_IP=
DOCKER_DEPLOY_ENABLED=false
DOCKER_MEMORY_LIMIT=1g
DOCKER_CPU_LIMIT=1
DOCKER_MAX_CONTAINERS=12
DOCKER_MIN_AVAILABLE_SLOTS=3
DOCKER_HOST_SERVER_TYPE=cpx42
DOCKER_HOST_LOCATION=hel1
